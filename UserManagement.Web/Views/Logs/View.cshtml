@using System.Globalization
@model UserManagement.Web.Models.Logs.LogListItemViewModel

<h2>Log ID: @Model.Id</h2>

<div class="table-responsive">
    <div>
        <label>Timestamp:</label>
        <p>@Model.Timestamp.ToString("yyyy-MM-ddTHH:mm:ssZ", CultureInfo.InvariantCulture)</p>
    </div>
    <div>
        <label>Log level:</label>
        <p>@Model.Level</p>
    </div>
    <div>
        <label>Message:</label>
        <p>@Model.Message</p>
    </div>
    <div>
        <label>Exception:</label>
        @{
            var status = string.IsNullOrEmpty(Model.Exception) ? "N/A" : $"{Model.Exception}";
        }
        <p>@status</p>
    </div>
</div>

<div>
    <div class="btn-group" role="group">
        <a asp-controller="Users" asp-action="List" class="btn btn-default">Show All</a>
        <a asp-controller="Users" asp-action="ActiveOnly" class="btn btn-default">Active Only</a>
        <a asp-controller="Users" asp-action="InactiveOnly" class="btn btn-default">Non Active</a>
    </div>
</div>

